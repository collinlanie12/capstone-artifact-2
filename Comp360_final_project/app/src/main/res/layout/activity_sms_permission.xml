<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- TextView to display the current SMS permission status -->
    <TextView
        android:id="@+id/permissionStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_permission_status"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <!-- Button to request SMS permission from the user -->
    <Button
        android:id="@+id/requestPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_sms_permission"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/black" />

</LinearLayout>